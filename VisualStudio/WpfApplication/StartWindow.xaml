<Window x:Class="WpfApplication.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Creator" WindowState="Maximized" WindowStyle="None"
        Icon="textures/icon.png">

    <Window.Background>
        <ImageBrush ImageSource="textures/background_bis.jpg" ></ImageBrush>
    </Window.Background>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Margin="10" FontSize="80" Name="title">SmallWorld</TextBlock>
        <Grid Margin="20" Name="mapGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0">Player 1</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1">Name:</TextBlock>
            <TextBox Grid.Column="1" Grid.Row="1" Name="name1Box"></TextBox>
            <TextBlock Grid.Column="0" Grid.Row="2">People:</TextBlock>
            <ComboBox  SelectionChanged="OnChangePeople1" ItemsSource="{Binding}" Grid.Column="1" Grid.Row="2" Name="people1Box" HorizontalAlignment="Left" Width="193" />
            <TextBlock Margin="5" FontSize="20" Grid.Column="0" Grid.Row="3"></TextBlock>
            <TextBlock  Grid.Column="0" Grid.Row="4">Player 2</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="5">Name:</TextBlock>
            <TextBox  Grid.Column="1" Grid.Row="5" Name="name2Box"></TextBox>
            <TextBlock  Grid.Column="0" Grid.Row="6">People:</TextBlock>
            <ComboBox SelectionChanged="OnChangePeople2" Grid.Column="1" Grid.Row="6" ItemsSource="{Binding}" Name="people2Box" />
            <TextBlock Margin="10" FontSize="20" Grid.Column="0" Grid.Row="7"></TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="8">Map size:</TextBlock>
            <ComboBox  SelectionChanged="OnChangeMap" Grid.Column="1" Grid.Row="8" Name="mapBox" ItemsSource="{Binding}" />

        </Grid>
        <Button Name="launcher" Click="OnClickLauncher" Width="150" Height="50">Launch!</Button>
        <Button Name="end" Click="OnClickEnd" Width="80" Height="40" FontSize="16">Exit</Button>
    </StackPanel>
</Window>
